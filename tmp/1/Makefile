################################################################################
# BASIC VARIABLES															   #
################################################################################

export DEBUG		:= -g -O0

################################################################################
# LIBRARY VARIABLES															   #
################################################################################

export DIR_MALLOC	:= libmalloc

export DIR_LIB		:= $(DIR_MALLOC)
PROG_TEST			:= test
APP					:= $(PROG_TEST)

################################################################################
# RULES																		   #
################################################################################

.PHONY: all $(APP) $(DIR_LIB)

all:  $(APP)

$(DIR_LIB):
	@echo
	@echo \	MAKE $(RULE) in directory : $@
	@$(MAKE) --directory=$@  $(RULE)

$(PROG_TEST): $(DIR_LIB)
	@echo
	@echo \	MAKE $(RULE) in directory : $@
	@$(MAKE) --directory=$@  $(RULE)

$(LIB_DRAW): $(LIB_MATH)

clean:
	make RULE=clean

fclean:
	make RULE=fclean

re:
	make RULE=re

